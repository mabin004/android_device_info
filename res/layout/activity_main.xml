<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.android_device_info.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="IMEI:"
        android:id="@+id/textView"
        android:layout_marginTop="27dp"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/IMEI"
        android:layout_marginEnd="42dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/IMEI"
        android:text="124345353"
        android:layout_alignBottom="@+id/textView"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="IMSI:"
        android:id="@+id/textView2"
        android:layout_marginTop="52dp"
        android:layout_below="@+id/textView"
        android:layout_alignStart="@+id/textView" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/IMSI"
        android:text="124345353"
        android:layout_alignBottom="@+id/textView2"
        android:layout_toEndOf="@+id/textView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Phone:"
        android:id="@+id/textView3"
        android:layout_marginTop="45dp"
        android:layout_below="@+id/ICCID"
        android:layout_alignStart="@+id/textView7" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/PHONE"
        android:text="124345353"
        android:layout_alignBottom="@+id/textView3"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="android_id:"
        android:id="@+id/textView4"
        android:layout_marginTop="54dp"
        android:layout_below="@+id/textView3"
        android:layout_alignEnd="@+id/textView5" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ANDROID_ID"
        android:text="124345353"
        android:layout_alignBottom="@+id/textView4"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MAC:"
        android:id="@+id/textView5"
        android:layout_below="@+id/textView4"
        android:layout_toStartOf="@+id/ANDROID_ID"
        android:layout_marginTop="62dp"
        android:layout_alignEnd="@+id/textView3" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/MAC"
        android:text="124345353"
        android:layout_alignBottom="@+id/textView5"
        android:layout_alignStart="@+id/ANDROID_ID" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ICCID"
        android:text="124345353"
        android:layout_below="@+id/IMSI"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ICCID:"
        android:id="@+id/textView7"
        android:layout_alignBottom="@+id/ICCID"
        android:layout_alignStart="@+id/textView2" />
</RelativeLayout>
